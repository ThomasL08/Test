<!-- settings_layout.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/green"
        android:gravity="center"
        android:onClick="onClickBack"
        android:text="Back"
        android:textColor="@color/dark_beige"
        android:visibility="visible"
        app:layout_column="0"
        app:layout_gravity="fill"
        app:layout_row="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UI Preferences"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="24dp"/>

    <!-- Dark Mode Option -->
    <CheckBox
        android:id="@+id/darkModeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark Mode"
        android:layout_marginBottom="16dp"/>

    <!-- Font Size Option -->
    <RadioGroup
        android:id="@+id/fontSizeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/smallFontSizeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small"/>

        <RadioButton
            android:id="@+id/mediumFontSizeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"/>

        <RadioButton
            android:id="@+id/largeFontSizeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large"/>

    </RadioGroup>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/magTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="-41dp"
        android:text="Screen Magnification" />

    <TextView
        android:id="@+id/magnifyTextView"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:text="%"
        android:textAlignment="textEnd" />

    <RadioGroup
        android:id="@+id/radioGroupColors"
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="43dp" />

        <RadioButton
            android:id="@+id/radioRed"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:checked="true"
            android:text="Red"
            android:textColor="#ff0000"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioBlue"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:text="Blue"
            android:textColor="#0000ff"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioGreen"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Green"
            android:textColor="#146714"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioBrown"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Brown"
            android:textColor="#372121"
            android:textSize="20sp" />

    </RadioGroup>


</LinearLayout>
